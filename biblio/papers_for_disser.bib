@Article{Dankert2015,
  author   = {Dankert, Andr{\'e} and Venkata Kamalakar, M. and Wajid, Abdul and Patel, R. S. and Dash, Saroj P.},
  title    = {Tunnel magnetoresistance with atomically thin two-dimensional hexagonal boron nitride barriers},
  journal  = {Nano Research},
  year     = {2015},
